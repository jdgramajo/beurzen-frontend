<div class="container col-12 col-sm-9 col-md-8 col-lg-7 col-xl-6 col-xxl-4" style="margin-top: 100px;">
  <form class="mt-5" action="" novalidate>
    <div class="d-flex flex-column">
      <div class="d-flex justify-content-center h3 mb-3">Login</div>
      <div class="mb-2 form-floating">
        <input id="user-input" type="text" placeholder="Usuario" class="form-control" required>
        <label for="user-input">Usuario</label>
        <div class="invalid-feedback">
          Usuario es requerido.
        </div>
      </div>
      <div class="mb-2 form-floating">
        <input id="password-input" type="password" placeholder="Contraseña" class="form-control" required>
        <label for="user-input">Contraseña</label>
        <div class="invalid-feedback">
          Contraseña es requerida.
        </div>
      </div>
      <div class="d-flex justify-content-center mb-2">
        <button type="submit" class="btn btn-lg btn-outline-success w-50">Ingresar</button>
      </div>
    </div>
  </form>
</div>
